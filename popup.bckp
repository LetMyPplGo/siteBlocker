<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website Blocker</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Website Blocker</h1>
	<div align="right">
		<button id="toggleActive">Toggle Active State</button>
	</div>

    <div class="form-group">
        <label for="siteInput">Add site (e.g., example.com):</label>
        <input type="text" id="siteInput" placeholder="Enter site to block">
		<button id="addSite">Add Site</button>
    </div>

    <div>
        <input type="time" id="newStartTime" placeholder="Start Time">
        <input type="time" id="newEndTime" placeholder="End Time">
        <button id="addSchedule">Add Schedule</button>
    </div>

    <div id="sitesList" class="site-list"></div>

    <div id="scheduleList"></div>

    <script src="popup.js"></script>
</body>
</html>
