{
  "manifest_version": 3,
  "name": "Website Schedule",
  "version": "1.0",
  "description": "Blocks websites based on user-defined schedules.",
  "permissions": [
    "storage",
    "alarms",
    "idle",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
